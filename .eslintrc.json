{
    "extends": ["prettier", "plugin:react/recommended"],
    "plugins": ["prettier", "react"],
    "rules": {
        "prettier/prettier": ["error"],
        "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ignorePatterns": ["src/packages/"],
    "env": {
        "es6": true
    }
}
